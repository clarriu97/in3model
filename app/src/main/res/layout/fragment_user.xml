<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.normal.user.UserFragment"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nameTextViewNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name:" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <TextView
        android:id="@+id/emailTextViewNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name:" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <TextView
        android:id="@+id/moneyDonatedTextViewNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name:" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="28dp"/>

    <Button
        android:id="@+id/changeAppButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change to admin app"
        android:layout_gravity="center"/>

</LinearLayout>